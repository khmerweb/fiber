{
  "version": 2,
  "builds": [
    {
      "src": "main.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": "views/**/*.html" 
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/main.go"
    }
  ]
}